<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C7EBFB"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_500sdp"
            android:background="@drawable/button_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_light_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/ic_back_blue" />

                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="right"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/leila"
                    android:text="فهرست"
                    android:textColor="#215C98"
                    android:textSize="@dimen/_30sdp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/account"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_white"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:fontFamily="@font/leila"
                    android:text="حساب کاربری                  "
                    android:textColor="#215C98"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_account_circle_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/travels"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_white"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:fontFamily="@font/leila"
                    android:text="سفرها"
                    android:textColor="#215C98"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bag_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarm"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_white"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:fontFamily="@font/leila"
                    android:text="هشدار"
                    android:textColor="#215C98"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clock_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nametravel"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_white"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:fontFamily="@font/leila"
                    android:text="سفر جدید"
                    android:textColor="#215C98"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_note_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/friends"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_white"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:fontFamily="@font/leila"
                    android:text="   گروه دوستان "
                    android:textColor="#215C98"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_faces_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_white"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:fontFamily="@font/leila"
                    android:text="تنطیمات"
                    android:textColor="#215C98"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_settings_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_white"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:fontFamily="@font/leila"
                    android:text="اشتراک گذاری "
                    android:textColor="#215C98"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_save_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/about"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/button_white"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:fontFamily="@font/leila"
                    android:text="درباره ما "
                    android:textColor="#215C98"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_about_blue" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>