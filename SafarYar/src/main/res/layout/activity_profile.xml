<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile"
    android:orientation="vertical">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="#A1DEF8"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_3sdp"
                android:src="@drawable/ic_back_blue" />

            <ImageView
                android:id="@+id/logoname"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_50sdp"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_70sdp"
                android:src="@drawable/ic_edit_blue" />

        </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/backgroound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C7EBFB"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_account_circle_blue"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/leila"
                android:text="پروفایل"
                android:textColor="#215C98"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            >

            <Button
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_white"
                android:fontFamily="@font/leila"
                android:gravity="right"
                android:paddingRight="@dimen/_10sdp"
                android:text=" نام :"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_white"
                android:fontFamily="@font/leila"
                android:gravity="right"
                android:paddingRight="@dimen/_10sdp"
                android:text=" نام خانوادگی :"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_white"
                android:fontFamily="@font/leila"
                android:gravity="right"
                android:paddingRight="@dimen/_10sdp"
                android:text=" رمز عبور : "
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/passwordcheck"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_white"
                android:fontFamily="@font/leila"
                android:gravity="right"
                android:paddingRight="@dimen/_10sdp"
                android:text="تایید رمز عبور :"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_white"
                android:fontFamily="@font/leila"
                android:gravity="right"
                android:paddingRight="@dimen/_10sdp"
                android:text="  شماره تماس :"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_white"
                android:fontFamily="@font/leila"
                android:gravity="right"
                android:paddingRight="@dimen/_10sdp"
                android:text="  ایمیل :"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="#C7EBFB">

        <LinearLayout
            android:id="@+id/ok"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_blue">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/leila"
                android:text="تایید"
                android:textColor="#ffff"
                android:textSize="@dimen/_40sdp" />
        </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#A1DEF8">

                <LinearLayout
                    android:id="@+id/home"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_home_gray" />

                    <TextView
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:fontFamily="@font/leila"
                        android:text="خانه"
                        android:textColor="#999999"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_add_gray" />

                    <TextView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:fontFamily="@font/leila"
                        android:text="جدید"
                        android:textColor="#999999"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calender"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_calendar_gray" />

                    <TextView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:fontFamily="@font/leila"
                        android:text="تقویم"
                        android:textColor="#999999"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alarm"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_notifications_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:fontFamily="@font/leila"
                        android:text="هشدار"
                        android:textColor="#999999"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/more"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_more_gray" />

                    <TextView
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:fontFamily="@font/leila"
                        android:text="بیشتر"
                        android:textColor="#999999"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>
