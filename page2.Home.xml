<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C7EBFB"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#A1DEF8"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginRight="80dp"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/person"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:src="@drawable/ic_person" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/leila"
            android:text="سفرها"
            android:textColor="#215C98"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_white"
                android:drawableRight="@drawable/ic_search"
                android:fontFamily="@font/leila"
                android:gravity="right"
                android:padding="10dp"
                android:text="  اسم مکان یا تاریخ"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="113dp"
           android:layout_marginTop="20dp"
           android:background="@drawable/button_white"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/ic_star"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="100dp"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/leila"
               android:text="فلان جا \n تاریخ :11/11/1111"
               android:textStyle="bold"
               android:textSize="30dp"/>
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_gravity="right"
               android:layout_marginTop="15dp"
               android:layout_marginRight="20dp"
               android:padding="10dp"
               android:src="@drawable/gallery"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="113dp"
           android:layout_marginTop="8dp"
           android:background="@drawable/button_white"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/ic_star"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="100dp"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/leila"
               android:text="فلان جا \n تاریخ :11/11/1111"
               android:textStyle="bold"
               android:textSize="30dp"/>
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_gravity="right"
               android:layout_marginTop="15dp"
               android:layout_marginRight="20dp"
               android:padding="10dp"
               android:src="@drawable/gallery"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="113dp"
           android:layout_marginTop="8dp"
           android:background="@drawable/button_white"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/ic_star"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="100dp"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/leila"
               android:text="فلان جا \n تاریخ :11/11/1111"
               android:textStyle="bold"
               android:textSize="30dp"/>
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_gravity="right"
               android:layout_marginTop="15dp"
               android:layout_marginRight="20dp"
               android:padding="10dp"
               android:src="@drawable/gallery"/>

       </LinearLayout>

         <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

          <Button
           android:id="@+id/map"
           android:layout_width="51dp"
           android:layout_height="49dp"
           android:layout_marginTop="5dp"
           android:background="@drawable/circle_button"
           android:drawableRight="@drawable/ic_map_blue"
           android:padding="15dp"
           android:textColor="#FFFFFF"/>
         </LinearLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_gravity="center_horizontal">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_margin="-20dp">


               <LinearLayout
                   android:id="@+id/home"
                   android:layout_width="61dp"
                   android:layout_height="91dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   android:layout_marginRight="20dp"
                   android:orientation="vertical"
                   >

                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:padding="-50dp"
                       android:src="@drawable/ic_home" />

                   <TextView
                       android:layout_width="45dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-10dp"
                       android:fontFamily="@font/leila"
                       android:text="خانه"
                       android:textSize="25dp"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/add"
                   android:layout_width="64dp"
                   android:layout_height="91dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   android:layout_marginRight="20dp"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:padding="-50dp"
                       android:src="@drawable/ic_add_gray" />

                   <TextView
                       android:layout_width="45dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-15dp"
                       android:fontFamily="@font/leila"
                       android:text="جدید"
                       android:textSize="25dp"
                       android:textColor="#999999"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/calender"
                   android:layout_width="64dp"
                   android:layout_height="91dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   android:layout_marginRight="20dp"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:padding="-50dp"
                       android:src="@drawable/ic_calendar_gray" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-15dp"
                       android:fontFamily="@font/leila"
                       android:text="تقویم"
                       android:textColor="#999999"
                       android:textSize="25dp"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/alarm"
                   android:layout_width="63dp"
                   android:layout_height="91dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   android:layout_marginRight="20dp"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:padding="-50dp"
                       android:src="@drawable/ic_notifications_gray" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-15dp"
                       android:fontFamily="@font/leila"
                       android:text="هشدار"
                       android:textColor="#999999"
                       android:textSize="25dp"
                       android:textStyle="bold" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/more"
                   android:layout_width="56dp"
                   android:layout_height="91dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:padding="-50dp"
                       android:src="@drawable/ic_more_gray" />

                   <TextView
                       android:layout_width="45dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-15dp"
                       android:fontFamily="@font/leila"
                       android:text="بیشتر"
                       android:textColor="#999999"
                       android:textSize="25dp"
                       android:textStyle="bold" />

               </LinearLayout>
           </LinearLayout>
       </RelativeLayout>
</LinearLayout>
